{
  "name": "airchat",
  "productName": "AirChat",
  "version": "1.0.0",
  "description": "UDP чат с голосом на Electron + Go",
  "main": "main.js",
  "author": "VenousS",
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-deb": "^7.8.1",
    "@electron-forge/maker-rpm": "^7.8.1",
    "@electron-forge/maker-squirrel": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.1",
    "@electron-forge/plugin-fuses": "^7.8.1",
    "@electron/fuses": "^1.8.0",
    "electron": "36.3.1",
    "fs-extra": "^11.3.0"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1"
  },
  "scripts": {
    "clean": "rimraf bin/*.exe out node_modules",
    "build:go": "cd src/go_server && go mod tidy && go build -o ../../bin/server.exe && cd ../go_client && go mod tidy && go build -o ../../bin/client.exe",
    "start": "npm run build:go && electron-forge start",
    "package": "electron-forge package",
    "make": "npm run build:go && electron-forge make"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "asar": false,
        "name": "AirChatPackageJsonTest",
        "extraResources": [
          "bin/server.exe",
          "bin/client.exe",
          "bin/libopus-0.dll",
          "bin/libportaudio.dll",
          "bin/libwinpthread-1.dll",
          "bin/libatomic-1.dll",
          "bin/libgcc_s_seh-1.dll",
          "bin/libgomp-1.dll",
          "bin/libquadmath-0.dll",
          "bin/libstdc++-6.dll",
          "bin/libcrypto-3-x64.dll",
          "bin/libssl-3-x64.dll",
          "bin/libopusfile-0.dll",
          "bin/libopusurl-0.dll",
          "bin/libportaudiocpp.dll",
          "bin/libogg-0.dll"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "airchat"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "win32"
          ]
        }
      ],
      "plugins": []
    }
  }
}
